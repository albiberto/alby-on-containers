@page "/descriptions"

<PageTitle>Descriptions</PageTitle>
<MudText Typo="Typo.h3" GutterBottom="true">Descriptions</MudText>

<div class="d-flex flex-row-reverse mb-6">
    <MudButton Variant="Variant.Text" Color="Color.Primary" StartIcon="@Icons.Material.Outlined.Add" OnClick="() => AddDescriptionAsync()">Add</MudButton>
</div>

<MudDataGrid Items="@descriptions" EditMode="@DataGridEditMode.Cell">
    <Columns>
        <HierarchyColumn T="Data"  />
        <PropertyColumn Property="x => x.Name" Title="Name" />
        <PropertyColumn Property="x => x.Description" Title="Description" />
    </Columns>
    <ChildRowContent>
        <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
            <MudTabPanel Text="Categories">
                <DescriptionCategories Categories="context.Item.Categories"/>
            </MudTabPanel>
            <MudTabPanel Text="Values">
                <DescriptionValues Values="context.Item.Values"/>
            </MudTabPanel>
        </MudTabs>
    </ChildRowContent>
    <PagerContent>
        <MudDataGridPager T="Data" />
    </PagerContent>
</MudDataGrid>